{{!-- new card --}}
 <div class="card">
    <div class="card-content">
      <h3 class="header col s12 light center" id="nameuserup">Your perfil {{user.name}}</h3>
    </div>
    <div class="card-tabs">
      <ul class="tabs tabs-fixed-width">
        <li class="tab"><a href="#iddone">DONE</a></li>
        <li class="tab"><a class="active" href="#idtodo">TO DO</a></li>
     
      </ul>
    </div>
    <div class="card-content grey lighten-4">
      <div id="iddone"><h5 class="header col s11 light ">You have done {{done}} activities </h5></div>
      <div  id="idtodo"><h5 class="header col s11 light">You have to do {{todo}} activities </h5></div>
    </div>
  </div>

<div id="message-error" ></div> 

<div id="register-page" class="row">
    <div class="col s12 z-depth-6 card-panel">
      <form class="register-form">
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">person_outline</i>
            <input class="validate" id="perfilname" name="name" type="text" value="{{user.name}}">
            <label for="name" data-error="wrong" data-success="right">Name</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">phone_outline</i>
            <input class="validate" id="perfilphone" type="number" value="{{user.phone}}">
            <label for="phone" data-error="wrong" data-success="right">Phone</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">mail_outline</i>
            <input class="validate" id="perfilemail" type="email" value="{{user.email}}">
            <label for="email" data-error="wrong" data-success="right">Email</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">lock_outline</i>
            <input id="perfilpassword" type="password">
            <label for="password">Password</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">repeat_outline</i>
            <input id="perfilrepeat" type="password">
            <label for="repeat">Repeat Password</label>
          </div>
        </div>
        <input type="hidden" id="iduser" value="{{user.id}}" >
         
        <div class="row">
          <div class="input-field col s12">
            <a href="/user" id="perfilupdate" class=" waves-effect waves-light btn modal-trigger col s12">Update</a>
            <br><br>
            <a class="waves-effect waves-light btn  black col s12 " href="/user">BACK</a>
          </div>
        </div>


      </form>
    </div>
  </div> 